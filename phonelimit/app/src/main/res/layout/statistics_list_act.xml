<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_statistics_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ActionBarList3"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/PieButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="Pie"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/BarButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="Bar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ListButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="List"
            android:textColor="@color/white" />

    </LinearLayout>

    <ListView
        android:id="@+id/AppStatisticsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ActionBarList3"
        android:layout_below="@+id/buttonbarList3" />

    <LinearLayout
        android:id="@+id/buttonbarList3"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/daybuttonlist3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="DAY"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/weekbuttonlist3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="WEEK"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/monthbuttonlist3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="MONTH"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/yearbuttonlist3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bt_layout"
            android:text="YEAR"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
