<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user.UserInfoActivity">

    <data>

        <variable
            name="viewmodel"
            type="com.lfork.phonelimitadvanced.user.UserInfoViewModel" />

        <import type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_user_info"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:text="昵称："
                android:visibility="@{viewmodel.isLoggedIn?View.VISIBLE:View.GONE}" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_username_label"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@id/tv_username_label"
                android:text="@={viewmodel.username}"
                android:visibility="@{viewmodel.isLoggedIn?View.VISIBLE:View.GONE}"
                tools:text="986204478@qq.com" />

            <TextView
                android:id="@+id/tv_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username_label"
                android:layout_alignStart="@id/tv_username_label"
                android:layout_marginTop="8dp"
                android:text="邮箱："
                android:visibility="@{viewmodel.isLoggedIn?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_email_label"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@id/tv_email_label"
                android:text="@={viewmodel.email}"
                android:visibility="@{viewmodel.isLoggedIn?View.VISIBLE:View.GONE}"
                tools:text="986204478@qq.com" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="128dp"
                android:layout_height="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_rectangle_green"
                android:gravity="center"
                android:padding="18dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="@{viewmodel.isLoggedIn?View.GONE:View.VISIBLE}" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:src="@{viewmodel.avatar}"
                tools:src="@drawable/ic_white_name_24dp" />

            <TextView
                android:id="@+id/tv_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="left"
                android:maxLines="2"
                android:text="@={viewmodel.motto}"
                tools:text="@string/default_motto" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_user_info">

            <Button
                android:id="@+id/btn_edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_edit_username" />

            <Button
                android:id="@+id/btn_edit_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_edit_username"
                android:layout_marginTop="8dp"
                android:text="@string/btn_edit_motto" />

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_edit_tips"
                android:layout_marginTop="8dp"
                android:text="@string/btn_change_password" />


            <Button
                android:id="@+id/btn_forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_change_password"
                android:layout_marginTop="8dp"
                android:text="@string/btn_forget_password" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_forget_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/crimson"
                android:text="@string/btn_logout"
                android:textColor="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/task_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="#cc000000"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_user_info">

            <!-- Login progress -->
            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/login_form" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="处理中..."
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</layout>