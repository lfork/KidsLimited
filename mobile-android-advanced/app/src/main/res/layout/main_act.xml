<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity" tools:layout_editor_absoluteY="81dp">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:id="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#000000"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_execute_shell" android:layout_marginBottom="8dp">

        <TextView
                android:textColor="#ffffff"
                android:id="@+id/sample_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:scrollbars="vertical"
        />

    </ScrollView>

    <Button
            android:text="@string/get_root_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/get_root"
            app:layout_constraintTop_toBottomOf="@+id/args_input" app:layout_constraintStart_toEndOf="@+id/list_files"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginEnd="18dp"
    />
    <Button
            android:text="@string/list_root_path_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_files"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/get_root"
            app:layout_constraintEnd_toStartOf="@+id/get_root" android:layout_marginEnd="14dp"
    />
    <EditText
            android:id="@+id/args_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="请输入需要列出的文件夹路径"
            android:text="Name"
            android:ems="10"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="7dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_execute_shell" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/get_root" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="13dp"/>
    <Button
            android:text="@string/execute_shell"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_execute_shell"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/args_input" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="78dp" app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>